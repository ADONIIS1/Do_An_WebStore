@model  IEnumerable<WebStoreFZF.Models.TaiKhoan>
@{ ViewBag.Title = "KhachHang";
                Layout = "~/Views/Shared/LayoutAdmin.cshtml"; 
}



<main class="bg-white-500 flex-1 p-3 overflow-hidden">
    <div class="flex flex-col">
        <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2">
            <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-full">
                <div class="bg-gray-200 px-2 py-3 border-solid border-gray-200 border-b">
                    Khách Hàng
                </div>
                <div class="p-3">
                    <table class="table-responsive w-full rounded">
                        <thead>
                            <tr>
                                <th class="border w-1/7 px-4 py-2">Mã KH</th>
                                <th class="border w-1/6 px-4 py-2">Tên Khách Hàng</th>
                                <th class="border w-1/6 px-4 py-2">Email</th>
                                <th class="border w-1/6 px-4 py-2">Địa Chỉ</th>
                                <th class="border w-1/6 px-4 py-2">Điện Thoại</th>
                                <th class="border w-1/6 px-4 py-2">Ngày Sinh</th>
                                <th class="border w-1/7 px-4 py-2">Quyền</th>
                                <th class="border w-1/4 px-4 py-2">Actions</th>

                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
            <tbody>
                <tr>
                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.ID)</td>
                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.HoTen)</td>
                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.DiaChi)</td>
                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.SDT)</td>
                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                    @if (item.Quyen == true)
                    {
    <td class="border px-4 py-2">
        <i class="fas fa-check text-green-500 mx-2"></i>
    </td> }
                    else
                    {
    <td class="border px-4 py-2">
        <i class="fas fa-times text-red-500 mx-2"></i>
    </td>}
                    <td class="border px-4 py-2">
                        <a class="bg-teal-300 cursor-pointer rounded p-1 mx-1 text-white">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="bg-teal-300 cursor-pointer rounded p-1 mx-1 text-white" href="@Url.Action("SuaKhachHang", new { id = item.ID })">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="bg-teal-300 cursor-pointer rounded p-1 mx-1 text-red-500" onclick="return ConfirmXoa()" href="@Url.Action("XoaKhachHang", new { id = item.ID })">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            </tbody>}


                    </table>
                </div>
            </div>
        </div>
        <!--/Grid Form-->
    </div>
</main>

<script>function ConfirmXoa() {
        if (confirm("Bạn có chắc muốn xóa loại sản phẩm này không ?"))
            return true;
        else
            return false;
    }
    FocusEvent = false;
    checked = false;</script>