@model  WebStoreFZF.Models.HangSanXuatVM

@{
    ViewBag.Title = "HangSanXuat";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<main class="bg-white-500 flex-1 p-3 overflow-hidden">
    <div class="flex flex-col">
        <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2">
            <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-full">
                <div class="bg-gray-200 px-2 py-3 border-solid border-gray-200 border-b">
                    Hãng Sản Xuất
                </div>
                <div class="d-flex md:items-center" style="margin-top: 10px ">
                    <div class="md:w-2/3">

                        <a href="~/Admin/ThemKieuSP">
                            <input class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded btn btn-default"
                                   type="button" value="Create">
                        </a>
                    </div>
                </div>
                <div class="md:w-1/3" style="margin: 15px auto">
                    <div class="md:w-2/4 block">
                        <div>
                            @Html.DropDownList("IdLOAISP", null, "Chọn loại", htmlAttributes: new { @class = "appearance-none block w-full bg-gray-200  border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white-500" })
                        </div>

                    </div>
                </div>
                <div class="p-3">
                    <table class="table-responsive w-full rounded">
                        <thead>
                            <tr>
                                <th class="border w-1/4 px-4 py-2">Mã hãng sản xuất</th>
                                <th class="border w-1/6 px-4 py-2">Tên hãng sản xuất</th>
                                <th class="border w-1/6 px-4 py-2">Tên loại thiết bị</th>
                                <th class="border w-1/5 px-4 py-2">Actions</th>
                            </tr>
                        </thead>
                        @for (int i = 0; i < Model.SectionList.Count; i++)
                        {
                            <tbody>
                                <tr>
                                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => Model.SectionList[i].IdKIEUSP)</td>
                                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => Model.SectionList[i].TENKIEUSANPHAM)</td>
                                    <td class="border px-4 py-2">@Html.DisplayFor(modelItem => Model.SectionList[i].TENLOAISANPHAM)</td>
                                    <td class="border px-4 py-2">
                                        <a class="bg-teal-300 cursor-pointer rounded p-1 mx-1 text-white" href="@Url.Action("SuaKieuSP", new { id = Model.SectionList[i].IdKIEUSP})">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="bg-teal-300 cursor-pointer rounded p-1 mx-1 text-red-500" onclick="return ConfirmXoa()" href="@Url.Action("XoaKieuSP", new { id = Model.SectionList[i].IdKIEUSP })">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
        <!--/Grid Form-->
    </div>
</main>

<script>
    function ConfirmXoa() {
        if (confirm("Bạn có chắc muốn xóa loại sản phẩm này không ?"))
            return true;
        else
            return false;
    }
    FocusEvent = false;
    checked = false;

</script>
<script type="text/javascript">
    function BindClass() {
	var CoureId = $('#CourseId').val();
	$.ajax({
	url: '@Url.Action("FillClass", "SectionMaster", new { area = "School"})',
	type: "GET"
	dataType: "JSON",
	data: {CourseId: CourseId},
	success: funcion (classes) {
	$("#ClassId").html("");
	var optionhtml1 = '<option value="">' + "--Select Class--" + '</option>';
	$("#ClassId").append(optionhtml1);
	$.each(classes, function (i) {
	var optionhtml = '<option value="' + classes[i].Value + '">' + classes[i].Text + '</option>';
	$("#ClassId").append(optionhtml);
	});
	}
	});
	}
</script>




